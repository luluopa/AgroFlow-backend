{
  "name": "agroflow-backend",
  "version": "1.0.0",
  "description": "Backend do projeto agroflow",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --forceExit --coverage --verbose --maxWorkers=1",
    "clear-cache": "jest --clear-cache",
    "clean": "rimraf dist",
    "build": "tsc",
    "watch:build": "tsc --watch",
    "watch:server": "cross-env NODE_ENV=production nodemon './dist/src/index.js' --watch './dist'",
    "watch:dev": "nodemon ./src/index.ts",
    "watch:test": "npm run test -- --watchAll",
    "lint": "eslint . --ext=.ts",
    "lint-fix": "eslint . --ext=.ts --fix",
    "format": "prettier --write .",
    "start": "cross-env NODE_ENV=development npm run watch:dev",
    "db:makemigrations": "npx sequelize-cli migration:generate --name",
    "db:migrate": "npx sequelize db:migrate"
  },
  "keywords": [
    "agroflow",
    "api",
    "backend"
  ],
  "authors": [
    {
      "name": "Mike"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.20.1",
    "sequelize-typescript": "^2.1.3"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@types/sequelize": "^4.28.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3"
  }
}
